<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "何かつぶやく" %>
  </div>
  <%= f.submit "つぶやく！", class: "btn btn-primary" %>
  
  <span class="img">
    <%= f.file_field :img, accept: 'image/jpeg,image/gif,image/png' %>
  </span>
  
<% end %>